<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:id="@+id/express1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity=""
            android:padding="8dp" 
            >
            <com.example.z_shenou.roundedimageview.RoundedImageView
            android:id="@+id/pulishuserimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/unlogin"
            app:riv_border_color="#ff8890"
            app:riv_border_width="2dip"
            android:layout_gravity="center_vertical"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="repeat" />
            <LinearLayout
             android:id="@+id/ex_detailed"
             android:layout_marginTop="4dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="20dp"
              android:orientation="vertical"
               >
             <TextView
             android:id="@+id/ex_kuaidi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="中通快递"  
             android:textSize="20dp" 
             android:layout_weight="1"    
                />     
                 <TextView
              android:id="@+id/ex_time"
              android:layout_marginTop="2dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2016-10-07-10-20"  
              android:textSize="15dp" 
              />
            </LinearLayout>

            <Button
                android:id="@+id/ex_true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#ff8890"
                android:text="确认完成"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#ffffff"
                android:textSize="13dp" >
</Button>
        </LinearLayout>
        
    </android.support.v7.widget.CardView>
</RelativeLayout>