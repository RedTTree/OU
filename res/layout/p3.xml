<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent"
      android:background="@color/bg_Gray_light">
  

    <TextView
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:textColor="#787878"
         android:textSize="18dp"
         android:background="#ffffff"
         android:text="我的"
         android:paddingTop="10dp" 
         android:paddingLeft="10dp"/>
 <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
       > 
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="@drawable/bg04"
      android:orientation="horizontal"
      >
 <com.example.z_shenou.roundedimageview.RoundedImageView
        android:id="@+id/imageView1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/unlogin"
        app:riv_border_color="#ffffff"
        app:riv_border_width="2dip"
        android:layout_gravity="center_vertical"
        app:riv_corner_radius="30dip"
        android:layout_marginLeft="50dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="repeat" />

  <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
               >
             <TextView
         android:id="@+id/unlogin"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="8dp"
         android:text="请点击登录"
         android:layout_gravity="center_vertical"
         android:editable="false"
         android:singleLine="true"
         android:focusable="false"
         android:background="@null"
         android:drawableRight="@drawable/bg03"
         android:drawablePadding="10dp"
         android:textSize="18dp"      
         android:textColor="#ffffff"
/>    
                 <TextView
              android:id="@+id/OUnumber"
               android:layout_marginLeft="10dp"
              android:layout_marginTop="2dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:focusable="false"
              android:textSize="15dp" 
              android:textColor="#ffffff"
              />
            </LinearLayout>

    
      </LinearLayout>

         
         <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="基本信息"
         android:drawableLeft="@drawable/bg05"
         android:drawablePadding="8dp"
         android:textSize="18dp"
         android:focusable="false"
         android:paddingLeft="20dp"
         android:layout_marginTop="5dp"
/>
  <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#c1c1c1"/>
 <ListView
       android:id="@+id/ListView02"
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:footerDividersEnabled="true"
        />
   <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#c1c1c1"/>
 
  <ListView
       android:id="@+id/ListView03"
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:footerDividersEnabled="true"
        />
  <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#c1c1c1"/>
   <ListView
       android:id="@+id/ListView04"
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:footerDividersEnabled="true"
        />
      <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#c1c1c1"/>

   

 <Button
        android:id="@+id/btnSign_out"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
         android:layout_gravity="center"
        android:text="退出登录"
        android:focusable="false"
        android:textSize="18dp"
        android:background="#ff8890"        
        android:textColor="#ffffff"
        />
  </LinearLayout>
     </ScrollView>
 
 </LinearLayout>